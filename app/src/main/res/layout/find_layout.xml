<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app">

    <LinearLayout
        android:layout_weight="3"
        android:padding="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--문자 인증-->
        <LinearLayout
            android:layout_marginTop="80dp"
            android:id="@+id/layout_text"
            android:visibility="visible"
            android:layout_marginBottom="150dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_title"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인증 방법 선택"
                    android:textStyle="bold"
                    android:textSize="30dp"/>
                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#707070"/>
                <TextView
                    android:id="@+id/text_subTitle"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="찾기 방법을 선택해주세요."
                    android:textSize="15dp"/>
            </LinearLayout>

            <!--인증방법 선택-->
            <LinearLayout
                android:id="@+id/layout_select"
                android:visibility="visible"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="280dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_phone"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/cat"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="휴대폰 인증"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_email"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/cat"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이메일 인증"/>
                </LinearLayout>
            </LinearLayout>

            <!--휴대폰 입력-->
            <LinearLayout
                android:id="@+id/layout_phone"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <EditText
                    android:id="@+id/edit_phone"
                    android:padding="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="휴대폰 번호 입력"/>
                <Button
                    android:id="@+id/btn_sendPhone"
                    android:layout_marginBottom="15dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="인증번호 보내기"
                    android:textStyle="normal"
                    android:textSize="20dp"/>
            </LinearLayout>

            <!--이메일 입력-->
            <LinearLayout
                android:id="@+id/layout_email"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <EditText
                    android:id="@+id/edit_email"
                    android:padding="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="휴대폰 번호 입력"/>
                <Button
                    android:id="@+id/btn_sendEmail"
                    android:layout_marginBottom="15dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="인증번호 보내기"
                    android:textStyle="normal"
                    android:textSize="20dp"/>
            </LinearLayout>

            <!--인증번호 입력-->
            <LinearLayout
                android:id="@+id/layout_answer"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <EditText
                    android:id="@+id/edit_answer"
                    android:padding="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="인증 번호 입력"/>
                <Button
                    android:id="@+id/btn_isCorrect"
                    android:layout_marginBottom="15dp"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="확인"
                    android:textStyle="normal"
                    android:textSize="20dp"/>
            </LinearLayout>

            <!--인증번호 입력-->
            <LinearLayout
                android:id="@+id/layout_result"
                android:visibility="gone"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회원코드"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_code"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회원코드"
                    android:textSize="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_pass"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인 하시려면"/>
                <TextView
                    android:id="@+id/text_back"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="돌아가기"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

