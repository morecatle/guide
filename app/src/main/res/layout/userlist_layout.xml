<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:padding="15dp"
            android:gravity="center|left"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#CFD4FF">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/image_back"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back"/>
            <TextView
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀원 목록"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_weight="1"
                android:id="@+id/image_add"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E9ECFF">
            <!--현 인원, 정렬-->
            <LinearLayout
                android:id="@+id/layout_user_sort"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_user_people"
                    android:layout_marginRight="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 0명"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/text_user_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치순"
                    android:textSize="15dp"/>
            </LinearLayout>
            <!--리스트 뷰 시작-->
            <LinearLayout
                android:id="@+id/layout_user_list"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">
                <ListView
                    android:id="@+id/user_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerHeight="5dp"
                    android:divider="#E9ECFF"
                    android:transcriptMode="alwaysScroll"/>
            </LinearLayout>
            <!--일정이 없을 때.-->
            <LinearLayout
                android:id="@+id/layout_user_none"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행일정이 적용되지 않았어요. 일정을 추가하세요."
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/text_user_new"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정 추가하기"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>