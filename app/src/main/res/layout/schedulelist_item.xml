<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layout_schedulelist_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/image_schedulelist_state"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/list_off"/>
            <TextView
                android:layout_weight="10"
                android:id="@+id/text_schedulelist_name"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일정이름"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <LinearLayout
                android:id="@+id/layout_schedulelist_upAndDown"
                android:visibility="invisible"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:id="@+id/image_schedulelist_up"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/up"/>
                <ImageView
                    android:id="@+id/image_schedulelist_down"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/down"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layout_schedulelist_new"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/circle_right_list">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일정 이름 입력"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edt_schedulelist_new"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#CACACA"/>
                <ImageView
                    android:id="@+id/image_schedulelist_new"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layout_schedulelist_web"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/circle_right_list">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:background="#F6F6F6">
            <com.google.android.gms.maps.MapView
                android:id="@+id/fragment_main_mv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="true"
                android:clickable="true" />
        </LinearLayout>
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/layout_schedulelist_mapName"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/text_schedulelist_state"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도위치"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_schedulelist_update"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#D5D5D5">
            <LinearLayout
                android:id="@+id/layout_schedulelist_change"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/change"/>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="80dp"
                android:id="@+id/image_schedulelist_add"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add"/>
            <ImageView
                android:id="@+id/image_schedulelist_update"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/write"/>
            <ImageView
                android:id="@+id/image_schedulelist_delete"
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>